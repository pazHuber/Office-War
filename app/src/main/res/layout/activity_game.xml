<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/act_game_camera"
        android:layout_above="@+id/act_game_engGame_btn"
        android:layout_alignRight="@+id/act_game_right_arrow"
        android:layout_alignEnd="@+id/act_game_right_arrow"
        android:layout_alignTop="@+id/act_game_up_arrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:id="@+id/act_game_left_arrow"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/arrow_left"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:id="@+id/act_game_right_arrow"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/arrow_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:id="@+id/act_game_up_arrow"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/arrow_up"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/act_game_down_arrow"
        android:layout_alignStart="@+id/act_game_down_arrow" />
    <ImageButton
        android:id="@+id/act_game_down_arrow"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/arrow_down"
        android:layout_alignBottom="@+id/act_game_camera"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Game"
        android:id="@+id/act_game_engGame_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/act_game_fire_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/act_game_engGame_btn"
        android:layout_toRightOf="@+id/act_game_down_arrow"
        android:layout_toEndOf="@+id/act_game_down_arrow"
        android:src="@drawable/fire_btn"/>

</RelativeLayout>
